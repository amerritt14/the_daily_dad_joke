<div class="auth-container">
  <div class="auth-form-wrapper">
    <div class="auth-header">
      <h2 class="auth-title">
        Sign in to access Daily Dad Jokes
      </h2>
      <p class="auth-subtitle">
        Enter your credentials to view the jokes
      </p>
    </div>

    <%= form_with(model: resource, as: resource_name, url: session_path(resource_name), local: true, class: "auth-form") do |form| %>
      <input type="hidden" name="remember" value="1" />

      <div class="auth-form-fields">
        <div>
          <%= form.label :email, "Email address", class: "screen-reader-only" %>
          <%= form.email_field :email, autofocus: true, autocomplete: "email",
              class: "auth-form-field",
              placeholder: "Email address" %>
        </div>

        <div>
          <%= form.label :password, class: "screen-reader-only" %>
          <%= form.password_field :password, autocomplete: "current-password",
              class: "auth-form-field",
              placeholder: "Password" %>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="auth-remember-section">
          <div class="auth-remember-group">
            <%= form.check_box :remember_me, class: "auth-checkbox" %>
            <%= form.label :remember_me, class: "auth-checkbox-label" %>
          </div>
        </div>
      <% end %>

      <div>
        <%= form.submit "Sign in", class: "auth-submit-button" %>
      </div>
    <% end %>

    <div class="auth-links-section">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
