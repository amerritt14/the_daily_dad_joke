<div class="container mx-auto px-4 py-8">
  <h1 class="text-4xl font-bold text-center mb-8 text-gray-800">Daily Dad Jokes</h1>

  <% if @jokes.any? %>
    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      <% @jokes.each do |joke| %>
        <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow duration-200">
          <div class="mb-4">
            <h3 class="text-lg font-semibold text-gray-700 mb-2">Q: <%= joke.question %></h3>
            <p class="text-gray-600">A: <%= joke.answer %></p>
          </div>

          <% if joke.source.present? %>
            <div class="text-sm text-gray-500 mt-4 pt-4 border-t border-gray-200">
              Source: <%= joke.source %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <p class="text-xl text-gray-600">No jokes available yet!</p>
      <p class="text-gray-500 mt-2">Check back later for some dad jokes.</p>
    </div>
  <% end %>
</div>
